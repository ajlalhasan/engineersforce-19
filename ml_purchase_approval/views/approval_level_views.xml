<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ml_approval_level_list" model="ir.ui.view">
        <field name="name">ml.approval.level.list</field>
        <field name="model">ml.approval.level</field>
        <field name="arch" type="xml">
            <list string="Approval Levels">
                <field name="name"/>
                <field name="group_id"/>
                <field name="sequence"/>
                <field name="min_amount"/>
                <field name="max_amount"/>
                <field name="is_recommendation"/>
                <field name="is_approval"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ml_approval_level_form" model="ir.ui.view">
        <field name="name">ml.approval.level.form</field>
        <field name="model">ml.approval.level</field>
        <field name="arch" type="xml">
            <form string="Approval Level">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="group_id"/>
                            <field name="sequence"/>
                            <field name="min_amount"/>
                            <field name="max_amount"/>
                            <field name="is_recommendation"/>
                            <field name="is_approval"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>