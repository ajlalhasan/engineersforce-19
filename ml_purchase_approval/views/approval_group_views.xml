<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ml_approval_group_list" model="ir.ui.view">
        <field name="name">ml.approval.group.list</field>
        <field name="model">ml.approval.group</field>
        <field name="arch" type="xml">
            <list string="Approval Groups">
                <field name="name"/>
                <field name="sequence"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ml_approval_group_form" model="ir.ui.view">
        <field name="name">ml.approval.group.form</field>
        <field name="model">ml.approval.group</field>
        <field name="arch" type="xml">
            <form string="Approval Group">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Description of the approval group..."/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Approval Levels">
                            <field name="level_ids">
                                <list string="Approval Levels">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="min_amount"/>
                                    <field name="max_amount"/>
                                    <field name="is_recommendation"/>
                                    <field name="is_approval"/>
                                    <field name="active"/>
                                </list>
                                <form string="Approval Level">
                                    <sheet>
                                        <group>
                                            <field name="name"/>
                                            <field name="sequence"/>
                                            <field name="min_amount"/>
                                            <field name="max_amount"/>
                                            <field name="is_recommendation"/>
                                            <field name="is_approval"/>
                                            <field name="active"/>
                                        </group>
                                        <group>
                                            <field name="user_ids" widget="many2many_tags"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ml_approval_group" model="ir.actions.act_window">
        <field name="name">Approval Groups</field>
        <field name="res_model">ml.approval.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create approval groups to define multi-level approval workflows for purchase orders.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_ml_approval_groups"
        name="Approval Groups"
        parent="purchase.menu_purchase_config"
        action="action_ml_approval_group"
        sequence="100"/>
</odoo>