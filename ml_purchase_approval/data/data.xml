<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo data for testing -->
        <record id="demo_approval_group_1" model="ml.approval.group">
            <field name="name">Standard Purchase Approval</field>
            <field name="sequence">10</field>
            <field name="description">Standard approval workflow for purchase orders</field>
        </record>

        <record id="demo_approval_level_1" model="ml.approval.level">
            <field name="name">Recommendation Level</field>
            <field name="sequence">10</field>
            <field name="group_id" ref="demo_approval_group_1"/>
            <field name="min_amount">0</field>
            <field name="max_amount">500</field>
            <field name="is_recommendation">True</field>
            <field name="is_approval">False</field>
            <field name="user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="demo_approval_level_2" model="ml.approval.level">
            <field name="name">Approval Level 1</field>
            <field name="sequence">20</field>
            <field name="group_id" ref="demo_approval_group_1"/>
            <field name="min_amount">0</field>
            <field name="max_amount">1000</field>
            <field name="is_recommendation">True</field>
            <field name="is_approval">True</field>
            <field name="user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="demo_approval_level_3" model="ml.approval.level">
            <field name="name">Approval Level 2</field>
            <field name="sequence">30</field>
            <field name="group_id" ref="demo_approval_group_1"/>
            <field name="min_amount">0</field>
            <field name="max_amount">50000</field>
            <field name="is_recommendation">False</field>
            <field name="is_approval">True</field>
            <field name="user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

    </data>
</odoo>